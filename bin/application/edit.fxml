<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane maxHeight="-Infinity" 
maxWidth="-Infinity" 
minHeight="-Infinity" minWidth="-Infinity" 
xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
fx:controller="application.EditContoller">
   <left>
      <VBox prefHeight="60.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="FIO: ">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="13.0" />
               </VBox.margin>
            </Label>
            <Label prefHeight="22.0" prefWidth="44.0" text="Phone: ">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </left>
   <center>
      <VBox prefWidth="149.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="tbFio">
               <VBox.margin>
                  <Insets top="12.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="tbPhone">
               <VBox.margin>
                  <Insets top="12.0" />
               </VBox.margin>
            </TextField>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <right>
      <VBox prefHeight="80.0" BorderPane.alignment="CENTER">
         <children>
            <VBox>
               <children>
                  <Button fx:id="btnAddNew" mnemonicParsing="false" text="Add" defaultButton="true" onAction="#actionSave">
                     <VBox.margin>
                        <Insets bottom="12.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="btnCancel" mnemonicParsing="false" text="Cancel" cancelButton="true" onAction="#actionClose" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
   </right>
</BorderPane>
